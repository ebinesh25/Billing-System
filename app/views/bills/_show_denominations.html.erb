<table class="denominations">
  <%#byebug %>
  <% if denominations[:alert] %>
    <thead>

      <div style="color: #B00100; text-align: center; padding: 2em">
        <h1><%= denominations[:alert] %></h1>
      </div>
    </thead>
  <% else %>
    <tbody  >
    <%# (0..(denominations.length - 2)).step(2).each do |index| %>

    <% denominations.each_slice(2) do |pair|  %>
      <tr style="padding: 1em" >
        <% pair.each do |rupee, count| %>
          <% next unless rupee != "0"%>
          <td >
            <%= "#{rupee}" %>
          </td>
          <td class="form-control" >
            <%= "#{count}" %>
          </td>
          <td>
            &nbsp
          </td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  <% end %>
</table>
