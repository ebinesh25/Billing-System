
<% if params[:action] === "show" %>
<!--<id="<%#= dom_id bill %>">-->
  <h1>Billing System</h1>
  <br>
  <p>
    <strong>Customer email:</strong>
    <%= bill.customer_email %>
  </p>
  <br>
  <h3>Billing System</h3>
  <br>
  <div class="bill-section">
    <table class="table table-bordered" id="first_table">
      <thead>
      <tr class="text-center" style="background-color: #f2f2f2;" >
        <th>Product ID</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Purchased Price</th>
        <th>Tax % for Item</th>
        <th>Tax payable for Item</th>
        <th>Total Price of Item</th>
      </tr>
      </thead>
      <tbody>
      <%= render "product_prices", bill_products:  @bill_products %>
      </tbody>
    </table>
  </div>

  <br>
  <br>
  <h3>Balance Denominations</h3>
  <br>

  <% if params[:action] === 'show' && params[:token].present? %>
    <%= render "show_denominations", denominations: @remaining_denominations %>
 <% end %>

  <div  class="container d-flex justify-content-end" style="background-color: #f2f2f2;">
    <table>
      <tbody>
        <%= render "customer_amount" %>
      </tbody>
    </table>
  </div>

<style>

    .form-control{
        border: none;
        border-radius: 5px;
        background-color: #eff6ff;
        width: 200px;
    }

    /* Custom CSS for the table */
    .table thead th {
        background-color: #d7d1d1; /* Light grey for heading background */
    }
    .table tbody {
        background-color: #daeef3; /* Powdered blue for body background */
    }
    .footer{
        background-color: #d7d1d1;
        margin: 1em;
        padding: 1em;
        text-align: right;
    }
</style>
<% else %>
 Nothing to show here
<% end %>
